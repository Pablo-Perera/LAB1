<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background: #f4f4f4;
        }

        header {
            background: #003366;
            color: white;
            padding: 30px;
            text-align: center;
        }

        .container {
            padding: 40px;
            max-width: 1000px;
            margin: 0 auto;
        }

        h1 {
            margin-bottom: 10px;
        }

        p.description {
            color: #555;
            margin-bottom: 40px;
            text-align: center;
        }

        /* GRID DE SERVICIOS */
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
        }

        .card {
            background: white;
            border-radius: 8px;
            padding: 25px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.15);
            transition: transform .2s;
        }

        .card:hover {
            transform: scale(1.03);
        }

        .icon {
            font-size: 45px;
            margin-bottom: 15px;
            color: #003366;
        }

        .card h3 {
            margin: 0 0 10px;
            font-size: 20px;
            color: #003366;
        }

        .card p {
            margin: 0;
            color: #444;
            line-height: 1.5;
        }

        /* Enlace volver */
        .volver {
            display: inline-block;
            margin-top: 35px;
            text-decoration: none;
            color: #003366;
            font-weight: bold;
        }

        .volver:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <header>
        <h1><%= title %></h1>
    </header>

    <div class="container">
        <p class="description"><%= description %></p>

        <div class="grid">
            <% services.forEach(function(service) { %>
                <div class="card">
                    <div class="icon">
                        <% if(service.nombre.includes('Software')) { %>
                            üíª
                        <% } else if(service.nombre.includes('Consultor√≠a')) { %>
                            üß†
                        <% } else if(service.nombre.includes('Transformaci√≥n')) { %>
                            üîÑ
                        <% } else if(service.nombre.includes('Ciberseguridad')) { %>
                            üîê
                        <% } else { %>
                            üìå
                        <% } %>
                    </div>

                    <h3><%= service.nombre %></h3>
                    <p><%= service.detalle %></p>
                </div>
            <% }) %>
        </div>

        <a href="/" class="volver">‚Üê Volver al inicio</a>
    </div>

</body>
</html>

